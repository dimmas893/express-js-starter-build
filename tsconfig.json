{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@migrations/*": ["database/migrations/*"],
      "@seeders/*": ["database/seeders/*"]
    }
  },
  "include": ["src/**/*", "app/models/**/*", "database/seeders/**/*", "database/migrations/**/*"],
  "exclude": ["node_modules"]
}
